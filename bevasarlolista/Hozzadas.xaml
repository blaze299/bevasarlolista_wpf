<Window x:Class="bevasarlolista.Hozzadas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bevasarlolista"
        mc:Ignorable="d"
        Title="Hozzaadás" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Termék:" Margin="20,0,0,0"/>
        <TextBox x:Name="nev" Grid.Row="0" Text="Margarin" Width="150" Height="20" HorizontalAlignment="Right" Margin="0,0,20,0"/>
        <Label Grid.Row="1" Content="Mennyiség:" Margin="20,0,0,0"/>
        <TextBox x:Name="mennyiseg" Grid.Row="1" Text="1" Width="150" Height="20" HorizontalAlignment="Right" Margin="0,0,20,0"/>
        <Label Grid.Row="2" Content="Egységár:" Margin="20,0,0,0"/>
        <TextBox x:Name="egysegar" Grid.Row="2" Text="460" Width="150" Height="20" HorizontalAlignment="Right" Margin="0,0,20,0"/>
        <Label Grid.Row="3" Content="Típus:" Margin="20,0,0,0"/>
        <ComboBox x:Name="tipus" Grid.Row="3" SelectedIndex="0" Width="150" Height="20" HorizontalAlignment="Right" Margin="0,0,20,0">
            <ComboBoxItem Content="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
        </ComboBox>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="OK" Width="75" Height="35" Margin="10" Click="ok"/>
            <Button Content="Mégse" Width="75" Height="35" Margin="10" Click="megse"/>
        </StackPanel>
    </Grid>
</Window>
